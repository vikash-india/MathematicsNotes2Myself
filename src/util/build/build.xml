<project name="MathematicsNotes2Myself"
         default="build"
         basedir="/home/vikash/Personal/Workspace/MathematicsNotes2Myself/">

    <description>Convert LaTeX equations to images</description>

    <property file="${basedir}/src/util/build/build.properties"/>

    <target name="build">
        <apply executable="tex2im" failonerror="true" dir="${latex.dir}">
            <arg value="-o"/>
            <targetfile/>

            <fileset dir="${latex.dir}">
                <include name="**/*.tex"/>
                <exclude name="**/*Template*"/>
            </fileset>
            <mapper type="regexp"
                    from="(.*)\.tex"
                    to="${latex.target.dir}/\1.png"/>
        </apply>
    </target>

    <target name="clean">
        <delete>
            <fileset dir="${latex.target.dir}" includes="**/*.png"/>
        </delete>
    </target>
</project>

